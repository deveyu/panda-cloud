<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ydc.basepack.mapper.CategoryMapper">
    <resultMap id="categoryMap" type="com.ydc.basepack.model.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="is_parent" property="isParent"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort" property="sort"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>

    </resultMap>

    <select id="queryAll" resultMap="categoryMap" >
        select
            *
         from
             tb_category
    </select>

    <select id="getCategoryByPage" resultMap="categoryMap" >
        select
            *
         from
             tb_category
        <where >
            <if test="name != '' and name != null">
                and   name  like concat('%',#{name},'%')
            </if>
        </where>
    </select>

</mapper>
